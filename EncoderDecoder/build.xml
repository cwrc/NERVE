<project name="EncoderDecoder3" default="default" basedir=".">
    <description>Builds, tests, and runs the project EncoderDecoder3.</description>
    <import file="nbproject/build-impl.xml"/>

    <property name="store.jar.name" value="EncoderDecoder"/>
    <property name="store.dir" value="D:/Dropbox/projects.new/lib/custom"/>
    <target name="package-for-store" depends="jar">
        <mkdir dir="${store.dir}"/>

        <jar destfile="${store.dir}/temp_final.jar" filesetmanifest="skip">
            <zipgroupfileset dir="dist" includes="*.jar"/>
            <zipgroupfileset dir="dist/lib" includes="*.jar"/>
            <!--<zipgroupfileset dir="lib" includes="*.jar"/>-->
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>

        <zip destfile="${store.dir}/${store.jar.name}.jar">
            <zipfileset src="${store.dir}/temp_final.jar" excludes="META-INF/*.SF, META-INF/*.DSA, META-INF/*.RSA"/>
        </zip>

        <delete file="${store.dir}/temp_final.jar"/>
    </target>

</project>
